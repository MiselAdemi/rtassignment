<%= form_for @char_type, url: new_users_char_type_path(@char_type), html: { class: "form-horizontal", style: "display:inline;" } do |f| %>
 
  <% if @char_type.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@char_type.errors.count, "error") %> prohibited
        this character type from being saved:
      </h2>
      <ul>
        <% @char_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
	<div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
    	<%= f.text_field :title, class: 'form-control' %>
 		</div>
 	</div> 
 	
  <div class="field form-group">
    <%= f.label :avatar, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
    	<%= f.file_field :avatar %>
    </div>
  </div>
  
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
 
<% end %>
